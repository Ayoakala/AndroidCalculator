<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="4"
    app:rowCount="6"
    tools:context="summit.org.summitcalculator.CalculatorActivity">

    <!--TODO Improve this UI-->
    <!--TODO Add ids to text view and button-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_columnSpan="4"
        app:layout_column="0"
        app:layout_row="0"
        android:id="@+id/result" />

    <!--Row 1-->
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:text="7"
        app:layout_column="0"
        app:layout_rowWeight="1"
        app:layout_row="1"
        android:id="@+id/_7" />

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="8"
        app:layout_column="1"
        app:layout_row="1"
        android:id="@+id/_8" />
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:text="9"
        app:layout_rowWeight="1"
        app:layout_column="2"
        app:layout_row="1"
        android:id="@+id/_9" />

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:text="+"
        app:layout_rowWeight="1"
        app:layout_column="3"
        app:layout_row="1"
        android:id="@+id/add" />

    <!--Row 2-->
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:text="4"
        app:layout_column="0"
        app:layout_rowWeight="1"
        app:layout_row="2"
        android:id="@+id/_4" />

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:text="5"
        app:layout_rowWeight="1"
        app:layout_column="1"
        app:layout_row="2"
        android:id="@+id/_5" />
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="6"
        app:layout_column="2"
        app:layout_row="2"
        android:id="@+id/_6" />

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:text="-"
        app:layout_rowWeight="1"
        app:layout_column="3"
        app:layout_row="2"
        android:id="@+id/minus" />

    <!--Row 3-->

    <!--Row 4-->
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:text="1"
        app:layout_column="0"
        app:layout_rowWeight="1"
        app:layout_row="3"
        android:id="@+id/_1" />

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:text="2"
        app:layout_rowWeight="1"
        app:layout_column="1"
        app:layout_row="3"
        android:id="@+id/_2" />
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="3"
        app:layout_column="2"
        app:layout_row="3"
        android:id="@+id/_3" />

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:text="x"
        app:layout_rowWeight="1"
        app:layout_column="3"
        app:layout_row="3"
        android:id="@+id/times" />

    <!--Row 5-->
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:text="."
        app:layout_column="0"
        app:layout_rowWeight="1"
        app:layout_row="5"
        android:id="@+id/decimal" />

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:text="0"
        app:layout_rowWeight="1"
        app:layout_column="1"
        app:layout_row="5"
        android:id="@+id/_0" />


    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        app:layout_columnSpan="2"
        android:text="="
        app:layout_rowWeight="1"
        app:layout_column="2"
        app:layout_row="5"
        android:id="@+id/equals" />

</android.support.v7.widget.GridLayout>
